\Title{HUTP-92/A069}
{\vbox{\centerline{Characters in Conformal Field Theories}\nl
       \centerline{from Thermodynamic Bethe Ansatz}}}
\centerline{Atsuo Kuniba$^{1,}$
\footnote{$^a$}
{e-mail: kuniba@math.sci.kyushu-u.ac.jp}
, Tomoki Nakanishi$^{2,}$
\footnote{$^b$}
{e-mail: nakanisi@string.harvard.edu}
\footnote{\null}{Permanent Address:
Department of Mathematics, Nagoya University,
Nagoya 464 Japan}, Junji
Suzuki$^{3,}$
\footnote{$^c$}
{e-mail: jsuzuki@tansei.cc.u-tokyo.ac.jp}}
